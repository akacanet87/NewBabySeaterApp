<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_total_budget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/budget_total_txt_date"
        style="@style/text_bi20_cenAlign"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="4"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/budget_total_txt_time"
        style="@style/text_bi20_cenAlign"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="3"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/budget_total_txt_card"
        style="@style/text_bi14_cenAlign"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="2"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/budget_total_txt_place"
        style="@style/text_bi14_cenAlign"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="5"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/budget_total_txt_money"
        style="@style/text_bi14_cenAlign"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="3"
        android:ellipsize="end"
        android:maxLines="1"/>

</LinearLayout>